/* Responsive checks - Bootstrap handles layout responsiveness,
   ensure margin/padding does not break layout on smaller screens */

/* Styles for permanent overlay on left image */
.image-overlay-container {
  position: relative; /* Ensure absolute children positioned relative to this */
  display: inline-block;
}

/* Permanent dark overlay covering the entire left image */
.overlay-permanent {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 0.25rem;
  z-index: 3;
  pointer-events: none;
}

/* Centered white smoke text over the overlay */
.overlay-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: whitesmoke;
  font-size: 3rem; /* Large font size for prominence */
  font-weight: bold;
  text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
  z-index: 4;
  white-space: nowrap;
  pointer-events: none;
}

/* Responsive adaptation if needed */
@media (max-width: 768px) {
  .overlay-text {
    font-size: 2rem;
  }
}
